<!DOCTYPE html>
<html lang="pt-br">
<!-- Include Head -->
<%- include('partials/head', {title: 'Início'}) %>

<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- última visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Baseado em sua última visita</h2>
			</div>

			<% productsVisited.forEach(product => {  %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%= product.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= product.image %>" alt="imagem do produto">
						</figure>
						<article class="product-box_data">
							<h2><%= product.finalPriceFormated %></h2>
							<span><%= product.discount %> % OFF</span>
							<p><%= product.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>

		</div>
	</div>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>

			<% productsInSale.forEach(product => {  %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%= product.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= product.image %>" alt="imagem do produto">
						</figure>
						<article class="product-box_data">
							<h2><%= product.finalPriceFormated %></h2>
							<span><%= product.discount %> % OFF</span>
							<p><%= product.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>